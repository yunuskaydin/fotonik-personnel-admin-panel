{
  "expo": {
    "name": "Fotonik App",
    "slug": "fotonik-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "networkSecurityConfig": "network_security_config.xml"
          }
        }
      ]
    ],
    "splash": {
      "image": "./assets/fotonik-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#234060"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yunuskaydin.fotonikapp",
      "buildNumber": "1",
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "Duyuru görsellerini/vidyolarını galerinize kaydedebilmemiz için fotoğraf arşivinize ekleme izni gerekli.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#234060"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO"
      ],
      "package": "com.yunuskaydin.fotonikapp"
    },
    "web": {
      "favicon": "./assets/fotonik-logo.png"
    },
    "extra": {
      "eas": {
        "projectId": "deb3619f-3b8e-4375-9cdd-03aa8ce69c45"
      }
    }
  }
}
