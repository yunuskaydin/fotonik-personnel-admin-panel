{
  "expo": {
    "name": "Fotonik App",
    "slug": "Fotonik App",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/fotonik-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/fotonik-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#234060"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "Duyuru görsellerini/vidyolarını galerinize kaydedebilmemiz için fotoğraf arşivinize ekleme izni gerekli."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/fotonik-logo.png",
        "backgroundColor": "#234060"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO"
      ]
    },
    "web": {
      "favicon": "./assets/fotonik-logo.png"
    }
  }
}
